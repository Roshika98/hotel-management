<section id="contact" class="contact">
    <div class="container">
        <!-- multistep form -->
        <div class="card text-center w-75 mx-auto border-success">

            <div class="card-header">
                <h2 class="fs-title">Personal Details</h2>
            </div>

            <div class="card-body">
                <form id="payment-form" class="row g-3">
                    <fieldset>
                        <h5 class="fs-subtitle">Are you a Loyalty Member? <a href="">log in</a></h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="fname" class="form-label">First Name</label>
                                <input class="form-control" type="text" name="fname" placeholder="First Name"
                                    id="fname" />
                            </div>
                            <div class="col-md-6">
                                <label for="lname" class="form-label">Last Name</label>
                                <input class="form-control" type="text" name="lname" placeholder="Last Name"
                                    id="lname" />
                            </div>
                        </div><br>
                        <div class="row g-3">
                            <div class="col">
                                <label for="email" class="form-label">E-mail</label>
                                <input class="form-control" type="email" name="email" placeholder="abc@gmail.com"
                                    id="email" />
                            </div>
                            <div class="col">
                                <label for="phone" class="form-label">Mobile No</label>
                                <input class="form-control" type="text" name="phone" id="phone"
                                    placeholder="07x-xxxxxxx">
                            </div>
                        </div><br>
                        <div class="row">
                            <label for="address" class="form-label">Address</label>
                        </div><br>
                        <div class="row g-3">
                            <div class="col">
                                <label for="address" class="form-label">Address Line 1</label>
                                <input type="text" class="form-control" name="address" placeholder="Address Line 1"
                                    id="address" />
                            </div>
                        </div><br>
                        <div class="row g-3">
                            <div class="col">
                                <label for="city" class="form-label">City</label>
                                <input type="text" class="form-control" name="city" placeholder="city" id="city" />
                            </div>
                            <div class="col">
                                <label for="state" class="form-label">state/province</label>
                                <input type="text" class="form-control" name="state" placeholder="state" id="state" />
                            </div>
                        </div><br>
                        <div class="row g-3">
                            <div class="col">
                                <label for="postalCode" class="form-label">postal-Code</label>
                                <input type="text" class="form-control" name="postalCode" placeholder="postalCode"
                                    id="postalCode" />
                            </div>
                            <div class="col">
                                <label for="country" class="form-label">Country</label>
                                <select name="country" id="country" class="form-select">
                                    <option value="">----</option>
                                </select>
                            </div>
                        </div><br>

                        <input type="submit" name="submit" class="btn btn-success" value="Next" id="submit" />
                    </fieldset>
                </form>
            </div>

        </div>

    </div>
</section>